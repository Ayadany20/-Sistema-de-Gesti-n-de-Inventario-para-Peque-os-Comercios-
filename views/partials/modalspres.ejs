<!-- Agregar agregar -->
<div id="modal-agregar" class="box" style="
  display: none;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 2000;
  width: 400px;
  max-width: 90%;
  text-align: left;
  padding: 2rem;
  box-shadow: 0 2px 8px rgba(0,0,0,0.3);
  background-color: white;
">
